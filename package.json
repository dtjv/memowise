{
  "name": "memowise",
  "version": "1.0.0",
  "description": "A flashcard app using React + Redux",
  "engines": {
    "node": "7"
  },
  "scripts": {
    "clean": "rimraf build",
    "lint": "eslint *.js bin src test --color",
    "build": "npm run clean && webpack --progress --colors",
    "start": "node src/server/server.js",
    "e2e": "npm run import && cross-env NODE_PATH=src codeceptjs run --steps",
    "test": "npm run lint && cross-env NODE_PATH=src nyc mocha test/client test/server",
    "selenium": "selenium-standalone install && selenium-standalone start",
    "import": "./bin/deck-import-cli.js -a",
    "postinstall": "npm run build",
    "coverage": "nyc report --reporter=html && open ./coverage/index.html",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "codeceptjs": "0.5.0",
    "codecov": "1.0.1",
    "cross-env": "3.1.4",
    "enzyme": "2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-node": "0.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "lodash.range": "3.2.0",
    "mocha": "^3.2.0",
    "nock": "^9.0.4",
    "nyc": "^10.1.2",
    "react-addons-test-utils": "15.4.2",
    "redux-mock-store": "^1.2.2",
    "selenium-standalone": "6.0.1",
    "supertest": "^3.0.0",
    "webdriverio": "4.6.2"
  },
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.16.0",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "css-loader": "^0.26.1",
    "dotenv-safe": "4.0.3",
    "express": "^4.14.1",
    "express-session": "^1.15.0",
    "is-empty-object": "1.1.1",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.4",
    "meow": "3.7.0",
    "moment": "^2.17.1",
    "mongodb": "^2.2.22",
    "mongoose": "^4.8.1",
    "node-sass": "^4.5.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-markdown": "^2.4.4",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-persist": "4.3.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "2.5.4",
    "sass-loader": "^5.0.0",
    "style-loader": "^0.13.1",
    "uglify-js": "2.7.5",
    "uglifyjs-webpack-plugin": "0.1.4",
    "unique-random-array": "1.0.0",
    "webpack": "^2.2.1"
  },
  "babel": {
    "presets": [
      "latest",
      "react",
      "stage-2"
    ]
  },
  "nyc": {
    "exclude": [
      "tests/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "private": true
}
